<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- EditText for entering the starting location -->
    <EditText
        android:id="@+id/StartLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter starting location" />

    <!-- EditText for entering the destination location -->
    <EditText
        android:id="@+id/DestinationLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter destination location" />

    <!-- Add a SupportMapFragment to display the Google Map -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
